<h1>EDIT PAGE!!</h1>

<%- include("partials/header") %>

<div class="ui main text container segment">
<div class="ui huge header">Edit  <%= blog.title %></div>

<form class="ui form" action="/blogs/<%= blog._id %>?_method=put" method="post">

    <div class="field">
         <labe>Title</labe>
          <input type="text" value="<%= blog.title %>" name="blog[title]">
    </div>
    
    <div class="field">
        <label>Image</label>
        <input type="text" value="<%= blog.image %>" name="blog[image]">
    </div>
     
    <div class="field" >
        <label>Blog Content</label>
        <textarea name="blog[body]" ><%= blog.body%></textarea>
    </div>
    <a class="large ui buttons ui inverted orange button" href="/blogs/<%= blog._id%>" >BACK</a>
    <input type="submit" class="large ui buttons ui inverted green button">
    
</form>
</div>

<%- include("partials/footer") %>